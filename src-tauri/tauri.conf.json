{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FinCalculator",
  "version": "1.0.0",
  "identifier": "com.fincalculator.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "FinCalculator - Finanční Kalkulačka",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Domácí finanční kalkulačka",
    "longDescription": "Nativní desktopová aplikace pro správu domácích financí s plně variabilním počtem uživatelů, bank, účtů a peněžních toků.",
    "category": "Finance",
    "copyright": "2024 FinCalculator",
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
